<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
        android:title="@string/settings_of_interface">
    <SwitchPreference
        android:title="@string/use_night_mode"
        android:defaultValue="false"
        android:key="nightmode"
        android:enabled="false"/>
    </PreferenceCategory>
    <SwitchPreference android:title="@string/always_use_two_columns"
        android:defaultValue="false"
        android:key="tworow"/>
    <PreferenceCategory
        android:title="@string/settings_for_sd">
        <PreferenceScreen
            android:title="@string/allow_the_app_to_read_and_write_memory"
            android:key="grantaccess"
            android:enabled="false"/>
        <PreferenceScreen
            android:enabled="false"
            android:title="@string/change_the_directory_of_downloaded_wallpapers"/>
    </PreferenceCategory>
    <PreferenceCategory
        android:title="@string/information_of_app">
        <PreferenceScreen
            android:enabled="false"
            android:title="@string/version_app"/>
    </PreferenceCategory>
</PreferenceScreen>